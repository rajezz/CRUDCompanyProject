{
    "name": "crud-company-server",
    "version": "1.0.0",
    "description": "A NodeJS server to display and manage Companies data",
    "main": "index.js",
    "scripts": {
        "build-ts": "tsc",
        "build": "npm run lint && npm run build-ts",
        "test": "jest --forceExit --coverage --verbose",
        "start": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "npm run build && concurrently -k -p \"[{name}]\" -n \"Node,TypeScript\" -c \"green.bold,blue.bold\"  \"npm run watch-node\" \"npm run watch-ts\"",
        "debug": "npm run build && npm run watch-debug",
        "lint:fix": "eslint --fix --config .eslintrc.json",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rajezz/CRUDCompanyProject.git"
    },
    "keywords": [],
    "author": "Rajeswaran <rajezzandrj@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/rajezz/CRUDCompanyProject/issues"
    },
    "homepage": "https://github.com/rajezz/CRUDCompanyProject#readme",
    "devDependencies": {
        "@types/body-parser": "^1.19.2",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.13",
        "@types/errorhandler": "^1.5.0",
        "@types/eslint": "^8.40.0",
        "@types/express": "^4.17.17",
        "@types/express-session": "^1.17.7",
        "@types/lusca": "^1.7.1",
        "@types/node": "^20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "concurrently": "^8.1.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.3"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "compression": "^1.7.4",
        "connect-mongo": "^5.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.1.3",
        "errorhandler": "^1.5.1",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "lusca": "^1.7.0",
        "mongoose": "^7.2.2",
        "querystring": "^0.2.1"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
